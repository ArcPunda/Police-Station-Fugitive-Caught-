                    <TextBox HorizontalAlignment="Left" Height="42" Margin="336,416,0,0" TextWrapping="Wrap" Text="Date" VerticalAlignment="Top" Width="582" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="43" Margin="336,101,0,0" TextWrapping="Wrap" Text="Last Name/ First Name / Middle Name" VerticalAlignment="Top" Width="582" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="43" Margin="957,475,0,0" TextWrapping="Wrap" Text="Alias/Aliases" VerticalAlignment="Top" Width="582" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="44" Margin="336,162,0,0" TextWrapping="Wrap" Text="Address" VerticalAlignment="Top" Width="582" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="44" Margin="957,540,0,0" TextWrapping="Wrap" Text="Tel No. / Contact No." VerticalAlignment="Top" Width="582" FontSize="27"/>
                    <Label Content="Marital Status" HorizontalAlignment="Left" Margin="336,218,0,0" VerticalAlignment="Top" Height="41" Width="201" FontSize="27"/>
                    <CheckBox x:Name="Single" Content="Single" HorizontalAlignment="Left" Margin="336,272,0,0" VerticalAlignment="Top" Height="48" Width="156" FontSize="15"/>
                    <CheckBox x:Name="Married" Content="Married" HorizontalAlignment="Left" Margin="452,272,0,0" VerticalAlignment="Top" Height="48" Width="156" FontSize="15"/>
                    <CheckBox x:Name="Widower" Content="Widow/er" HorizontalAlignment="Left" Margin="578,272,0,0" VerticalAlignment="Top" Height="48" Width="156" FontSize="15"/>
                    <CheckBox x:Name="Seperated" Content="Seperated" HorizontalAlignment="Left" Margin="708,272,0,0" VerticalAlignment="Top" Height="48" Width="156" FontSize="15"/>
                    <Label Content="Sex" HorizontalAlignment="Left" Margin="336,307,0,0" VerticalAlignment="Top" Height="41" Width="201" FontSize="27"/>
                    <CheckBox x:Name="Male" Content="Male&#xD;&#xA;" HorizontalAlignment="Left" Margin="336,369,0,0" VerticalAlignment="Top" Height="48" Width="156" FontSize="15"/>
                    <CheckBox x:Name="Female" Content="Female&#xA;" HorizontalAlignment="Left" Margin="452,369,0,0" VerticalAlignment="Top" Height="48" Width="156" FontSize="15"/>
                    <TextBox HorizontalAlignment="Left" Height="43" Margin="1554,395,0,0" TextWrapping="Wrap" Text="Age" VerticalAlignment="Top" Width="277" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="43" Margin="1554,519,0,0" TextWrapping="Wrap" Text="Weight" VerticalAlignment="Top" Width="277" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="43" Margin="1554,453,0,0" TextWrapping="Wrap" Text="Height" VerticalAlignment="Top" Width="277" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="43" Margin="1554,639,0,0" TextWrapping="Wrap" Text="Eye Colour" VerticalAlignment="Top" Width="277" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="43" Margin="1554,581,0,0" TextWrapping="Wrap" Text="Hair Colour" VerticalAlignment="Top" Width="277" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="43" Margin="1554,699,0,0" TextWrapping="Wrap" Text="Skin Colour" VerticalAlignment="Top" Width="277" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="44" Margin="336,470,0,0" TextWrapping="Wrap" Text="Occupation" VerticalAlignment="Top" Width="582" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="44" Margin="957,414,0,0" TextWrapping="Wrap" Text="Nationality" VerticalAlignment="Top" Width="582" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="44" Margin="336,540,0,0" TextWrapping="Wrap" Text="Ethnic Group" VerticalAlignment="Top" Width="582" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="44" Margin="336,603,0,0" TextWrapping="Wrap" Text="Nationality" VerticalAlignment="Top" Width="582" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="44" Margin="336,679,0,0" TextWrapping="Wrap" Text="Dialect/Language" VerticalAlignment="Top" Width="582" FontSize="27"/>
                    <Label Content="Identifying Marks" HorizontalAlignment="Left" Margin="957,596,0,0" VerticalAlignment="Top" Height="51" Width="225" FontSize="27"/>
                    <CheckBox x:Name="Mole" Content="Mole&#xA;" HorizontalAlignment="Left" Margin="957,647,0,0" VerticalAlignment="Top" Height="48" Width="156" FontSize="15"/>
                    <CheckBox x:Name="Tattoo" Content="Tattoo&#xA;" HorizontalAlignment="Left" Margin="1070,647,0,0" VerticalAlignment="Top" Height="48" Width="156" FontSize="15"/>
                    <CheckBox x:Name="Birthmark" Content="Birthmark&#xA;" HorizontalAlignment="Left" Margin="1170,647,0,0" VerticalAlignment="Top" Height="48" Width="156" FontSize="15"/>
                    <CheckBox x:Name="Scar" Content="Scar&#xA;" HorizontalAlignment="Left" Margin="1286,647,0,0" VerticalAlignment="Top" Height="48" Width="156" FontSize="15"/>
                    <TextBox HorizontalAlignment="Left" Height="172" Margin="957,680,0,0" TextWrapping="Wrap" Text="Description of the Identifying Marks" VerticalAlignment="Top" Width="582" FontSize="27"/>
                    <Label Content="Physical Deformity/Defect" HorizontalAlignment="Left" Margin="336,728,0,0" VerticalAlignment="Top" Height="51" Width="320" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="145" Margin="336,779,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="582" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="43" Margin="59,374,0,0" TextWrapping="Wrap" Text="ID TYPE" VerticalAlignment="Top" Width="253" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="43" Margin="59,432,0,0" TextWrapping="Wrap" Text="ID NUMBER" VerticalAlignment="Top" Width="253" FontSize="27"/>
                </Grid>
            </TabItem>
            <TabItem Header="Arrest Details">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Details Of The Arrest:" HorizontalAlignment="Left" Margin="101,62,0,0" VerticalAlignment="Top" Height="55" Width="436" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="50" Margin="101,122,0,0" TextWrapping="Wrap" Text="Location Of The Arrest" VerticalAlignment="Top" Width="652" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="50" Margin="764,122,0,0" TextWrapping="Wrap" Text="Date Of Arrest" VerticalAlignment="Top" Width="650" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="48" Margin="764,177,0,0" TextWrapping="Wrap" Text="Time Of Arrest" VerticalAlignment="Top" Width="650" FontSize="27"/>
                    <Label Content="Arresting Officers:" HorizontalAlignment="Left" Margin="101,213,0,0" VerticalAlignment="Top" Height="54" Width="436" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="47" Margin="101,267,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="652" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="47" Margin="100,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="653" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="47" Margin="101,410,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="653" FontSize="27"/>
                    <Label Content="Unit Responsible:" HorizontalAlignment="Left" Margin="764,264,0,0" VerticalAlignment="Top" Height="54" Width="436" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="121" Margin="764,336,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="653" FontSize="27"/>
                    <Image x:Name="Polibe" HorizontalAlignment="Left" Height="541" Margin="1414,-142,0,0" VerticalAlignment="Top" Width="544" Source="/Police.png" IsHitTestVisible="False"/>
                    <TextBox HorizontalAlignment="Left" Height="323" Margin="100,624,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="1314" FontSize="27"/>
                    <Label Content="Description of Crime Scene:" HorizontalAlignment="Left" Margin="101,570,0,0" VerticalAlignment="Top" Height="54" Width="436" FontSize="27"/>
                    <Label Content="Police Ranking&#xD;&#xA;1. Police General (PGEN)&#xD;&#xA;2. Police Lieutenant General (PLTGEN)&#xD;&#xA;3. Police Major General (PMGEN)&#xD;&#xA;4. Police Brigadier General (PBGEN)&#xD;&#xA;5. Police Colonel (PCOL) &#xD;&#xA;6. Police Lieutenant Colonel (PLTCOL)&#xD;&#xA;7. Police Major  (PMAJ)&#xD;&#xA;8. Police Captain (PCPT)&#xD;&#xA;9. Police Lieutenant (PLT)&#xD;&#xA;10. Police Executive Master Sergeant (PEMS)&#xD;&#xA;11. Police Chief Master Sergeant (PCMS)&#xD;&#xA;12. Police Senior Master Sergeant (PSMS)&#xD;&#xA;13. Police Master Sergeant (PMSg)&#xD;&#xA;14. Police Staff Sergeant (PSSg)&#xD;&#xA;15. Police Corporal (PCpl)&#xD;&#xA;16. Patrolman / Patrolwoman (Pat)&#xD;&#xA;&#xD;&#xA;Instructions: &#xD;&#xA;When recording for Arresting Officers please indicate&#xD;&#xA;their name then their rank&#xD;&#xA;(Ex. Sevilla, Patrick [PEMS])" HorizontalAlignment="Left" Margin="1434,122,0,0" VerticalAlignment="Top" Height="684" Width="424" FontSize="16"/>
                </Grid>
            </TabItem>
            <TabItem Header="Offense Charges" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Offense Charge/s" HorizontalAlignment="Left" Margin="62,139,0,0" VerticalAlignment="Top" Height="55" Width="238" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="52" Margin="61,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="799" FontSize="27"/>
                    <Label Content="Modus Operanda" HorizontalAlignment="Left" Margin="897,146,0,0" VerticalAlignment="Top" Height="55" Width="238" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="704" Margin="897,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="789" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="52" Margin="61,283,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="799" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="52" Margin="61,365,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="799" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="52" Margin="61,448,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="799" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="52" Margin="61,532,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="799" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="52" Margin="61,612,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="799" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="52" Margin="62,692,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="798" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="52" Margin="62,776,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="798" FontSize="27"/>
                    <TextBox HorizontalAlignment="Left" Height="52" Margin="62,858,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="798" FontSize="27"/>
                    <Image HorizontalAlignment="Left" Height="420" Margin="1385,-111,0,0" VerticalAlignment="Top" Width="860" Source="/Police.png" IsHitTestVisible ="False"/>
                </Grid>
            </TabItem>
            <TabItem Header="Finalization/Back To Main Menu" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Send to Admin" HorizontalAlignment="Center" Height="114" Margin="0,270,0,0" VerticalAlignment="Top" Width="478" FontSize="27" FontWeight="Bold"/>
                    <Button Content="Review Arrest" HorizontalAlignment="Center" Height="115" Margin="0,421,0,0" VerticalAlignment="Top" Width="478" FontSize="27" FontWeight="Bold"/>
                    <Button x:Name="MainMenu" Content="Back To Main Menu" HorizontalAlignment="Center" Height="115" Margin="0,571,0,0" VerticalAlignment="Top" Width="478" FontSize="27" FontWeight="Bold" Click="MainMenu_Click"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
