                    <ComboBox x:Name="WbCams" HorizontalAlignment="Left" Height="31" Margin="59,5,0,0" VerticalAlignment="Top" Width="253"/>
                    <Button x:Name="Save_Pic" Content="Take Picture" HorizontalAlignment="Left" Margin="93,298,0,0" VerticalAlignment="Top" Height="43" Width="182" Click="Save_Pic_Click" FontWeight="Bold" FontSize="27"/>
